<resources>

    <style name="AnimationPreview">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>



    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppThemes" parent="@style/AppBaseTheme"/>

    <style name="AppBaseTheme" parent="@style/BaseTheme.AppCompat.Light">
        <!--
        <item name="android:buttonStyle">@style/Widget.AppTheme.Button</item>
        <item name="buttonStyle">@style/Widget.AppTheme.Button</item>
        -->
        <item name="android:windowBackground">@color/window_bg_gray</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionBarSize">48dp</item>
        <item name="homeAsUpIndicator">@drawable/ic_return_white_24dp</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary</item>
        <item name="colorAccent">@color/color_primary</item>
        <item name="android:textColorTertiary">@color/black</item>
        <!--
        <item name="android:textAppearance">@style/AppTheme.TextAppearance</item>
        <item name="editTextBackground">@drawable/bg_edit_text</item>
        <item name="editTextStyle">@style/Widget.AppTheme.EditText</item>
        <item name="android:editTextStyle">@style/Widget.AppTheme.EditText</item>
        <item name="searchViewStyle">@style/Widget.AppTheme.SearchView</item>
        -->
    </style>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.DarkActionBar" />

    <style name="BaseTheme.NoActionBar" parent="BaseTheme">
        <!-- Both of these are needed -->
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BaseTheme.AppCompat.Light" parent="BaseTheme.NoActionBar">
        <!--<item name="android:textColorPrimary">@color/abc_primary_text_material_light</item>-->
        <!--<item name="android:textColorSecondary">@color/abc_secondary_text_material_light</item>-->
        <item name="colorPrimary">@color/background_material_dark</item>
        <item name="colorPrimaryDark">@color/primary_dark_material_light</item>

        <!-- action bar -->
        <!--<item name="titleTextStyle">@style/TextAppearance.Title</item>-->
        <item name="toolbarStyle">@style/BaseTheme.Toolbar</item>

        <!--<item name="actionBarStyle">@style/BaseTheme.ActionBar</item>-->
        <item name="actionMenuTextColor">@color/abc_primary_text_material_dark</item>
        <item name="actionBarItemBackground">?attr/selectableItemBackground</item>
        <item name="windowActionModeOverlay">true</item>

    </style>

    <style name="BaseTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextAppearance">@style/TextAppearance.Title</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>

    <style name="TextAppearance.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>




</resources>
