<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/default_image" />

        <RelativeLayout
            android:paddingRight="2dp"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="会员编号:7167751"
                    android:textColor="@color/textprice_orange"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/identity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="身份:普通会员"
                        android:textColor="@color/textprice_orange"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/promotionnumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="推广人编号:6759698"
                        android:textColor="#222222"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/lin_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/weixinnumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="微信号:abcdefghijk"
                        android:textColor="#222222"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_marginLeft="3dp"
                        android:id="@+id/weixinname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="昵称:上善若水"
                        android:textColor="#222222"
                        android:textSize="11sp" />
                </LinearLayout>

                
                <!-- 手机   注册时间   -->
                <LinearLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    
                    <TextView 
                        android:textColor="#222222"
                        android:textSize="11sp" 
                        android:id="@+id/mem_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="手机"/>
                    
                     <TextView 
                        android:textColor="#222222"
                        android:textSize="11sp" 
                        android:layout_marginLeft="3dp" 
                        android:id="@+id/mem_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="推荐人数"/>
                </LinearLayout>
                
                <TextView 
                    android:textColor="#222222"
                    android:textSize="11sp" 
                    android:id="@+id/mem_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注册时间"/>
                
                </LinearLayout>
                
                <LinearLayout
                    android:layout_marginBottom="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/hisorder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btnnom"
                        android:padding="5dp"
                        android:text="TA的订单"
                        android:textColor="#222222"
                        android:textSize="13sp" />
				<!-- android:background="@drawable/btnnom" -->
                    
                    
                    <TextView
                        android:id="@+id/hismember"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/btnnom"
                        android:padding="5dp"
                        android:text="TA的会员"
                        android:textColor="#222222"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

            <!--  
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/down_arrow" />
                -->
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>